{
	"compilerOptions": {
		"module": "CommonJS",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"incremental": true,
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"exclude": ["**/mock/*.cjs", "./dist", "./node_modules"],
	"include": ["./src"]
}
