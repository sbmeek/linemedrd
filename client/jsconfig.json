{
	"compilerOptions": {
		"module": "commonJS",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"checkJs": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"typeAcquisition": {
		"enable": true,
		"include": ["./global.d.ts"]
	},
	"exclude": ["node_modules", "dist", "docs"]
}
